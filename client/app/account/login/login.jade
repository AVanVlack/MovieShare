div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Login
    .col-sm-12
      .jumbotron
        form.form(name='form', ng-submit='login(form)', novalidate='')
          .form-group
            label Email
            input.form-control.input-style(type='text', name='email', ng-model='user.email')
          .form-group
            label Password
            input.form-control.input-style(type='password', name='password', ng-model='user.password')

          .form-group.has-error
            p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
              | Please enter your email and password.
            p.help-block {{ errors.other }}

          div
            button.btn.input-style(type='submit')
              | Login
            = ' '
            a.btn.input-style(href='/signup')
              | Register
